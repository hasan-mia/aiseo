{
  "name": "BG Changer",
  "version": "1.0",
  "description": "A simple Chrome extension that manipulates the DOM of a webpage",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.js"
      ]
    }
  ]
}
